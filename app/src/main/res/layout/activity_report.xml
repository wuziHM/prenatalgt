<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkang.prenatalgt.ui.activity.ReportActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sp_10"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="李秀兰"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="26"
                android:textColor="@color/c_333333"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电话：18002231771"
                android:textColor="@color/c_333333"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_high"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="身高:160cm"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="体重:49kg"
                android:textColor="@color/c_333333"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="检测项目"
                    android:textColor="@color/c_333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_category1"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="项目"
                    android:textColor="@color/c_333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="结果"
                    android:textColor="@color/c_333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLabelCategory"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="参考范围"
                    android:textColor="@color/c_333333"
                    android:textStyle="bold"/>

            </LinearLayout>


            <include layout="@layout/item_report"/>

            <include layout="@layout/item_report"/>

            <include layout="@layout/item_report"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="诊断建议"
            android:textColor="@color/c_333333"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            >

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="@dimen/p5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/p5"
                android:background="@drawable/shape_corner_4_bg_white_storke_gray"
                android:gravity="start"
                android:hint="这里是医生的建议...."
                android:padding="5dp"
                android:textColor="@color/c_474747"
                android:textColorHint="@color/c_CDCCCD"
                android:textSize="@dimen/sp_14"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                style="@style/report_buttom_item"
                android:layout_width="@dimen/p0"
                android:layout_height="match_parent"
                android:text="甲功三项"/>

            <TextView
                android:id="@+id/tv_erlong"
                style="@style/report_buttom_item"
                android:layout_width="@dimen/p0"
                android:layout_height="match_parent"
                android:text="耳聋基因"/>

            <TextView
                style="@style/report_buttom_item"
                android:layout_width="@dimen/p0"
                android:layout_height="match_parent"
                android:text="脊肌萎缩"/>


            <TextView
                style="@style/report_buttom_item"
                android:layout_width="@dimen/p0"
                android:layout_height="match_parent"
                android:text="地中海贫血"/>

            <TextView
                style="@style/report_buttom_item"
                android:layout_width="@dimen/p0"
                android:layout_height="match_parent"
                android:text="颅面畸形"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
