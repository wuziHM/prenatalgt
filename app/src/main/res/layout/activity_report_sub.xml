<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboardLayout"
    style="@style/GRootViewStyle"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="耳聋基因">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/p5"
        android:fillViewport="true">

        <LinearLayout
            style="@style/GLinearLayoutStyle"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                style="@style/MStyle"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="李秀兰"/>

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="女"
                    />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="26"
                    />


            </LinearLayout>


            <LinearLayout
                style="@style/MStyle"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="电话：18002231771"

                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_high"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="身高:160cm"
                    />

                <TextView
                    android:id="@+id/tv_height"
                    style="@style/txt_12_333_center"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="体重:49kg"
                    />


            </LinearLayout>

            <TextView
                style="@style/txt_12_333_center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="耳聋基因"
                />

            <LinearLayout
                style="@style/MStyle"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category"
                        style="@style/txt_12_333_center"
                        android:layout_width="@dimen/p0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="基因名称"

                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_category1"
                        style="@style/txt_12_333_center"
                        android:layout_width="@dimen/p0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="检测位点"

                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_result"
                        style="@style/txt_12_333_center"
                        android:layout_width="@dimen/p0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="基因型"

                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvLabelCategory"
                        style="@style/txt_12_333_center"
                        android:layout_width="@dimen/p0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正常/突变"

                        android:textStyle="bold"/>

                </LinearLayout>


                <include layout="@layout/item_report_sub"/>

                <include layout="@layout/item_report_sub"/>

                <include layout="@layout/item_report_sub"/>

            </LinearLayout>

            <TextView
                style="@style/txt_12_333_center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="诊断建议"
                />

            <RelativeLayout
                style="@style/MStyle"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/p5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/p5"
                    android:background="@drawable/shape_corner_4_bg_white_storke_gray"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="\t未检出本检测范围所涉及的20个基因位点的突变。\n\t野生型表示基因位点检测结果正常。"
                    android:textColor="@color/c_474747"
                    android:textColorHint="@color/c_CDCCCD"
                    android:textSize="@dimen/sp_14"/>

            </RelativeLayout>


            <LinearLayout
                style="@style/MStyle"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    style="@style/txt_12_333_center"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_housemanager_blue"
                    android:gravity="center"
                    android:text="甲功三项"
                    />

                <TextView
                    style="@style/txt_12_333_center"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_housemanager_blue"
                    android:gravity="center"
                    android:text="耳聋基因"
                    />

                <TextView
                    style="@style/txt_12_333_center"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_housemanager_blue"
                    android:gravity="center"
                    android:text="脊肌萎缩"
                    />

                <TextView
                    style="@style/txt_12_333_center"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_housemanager_blue"
                    android:gravity="center"
                    android:text="地中海贫血"
                    />

                <TextView
                    style="@style/txt_12_333_center"
                    android:layout_width="@dimen/p0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_housemanager_blue"
                    android:gravity="center"
                    android:text="颅面畸形"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</LinearLayout>
